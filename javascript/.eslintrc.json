{
  "root": true,

  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "shared-node-browser": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:testing-library/react",
    "prettier"
  ],

  "plugins": [
    "import",
    "react",
    "react-hooks"
  ],

  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["app", "./app"]
        ],
        "extensions": [".js", ".jsx", ".ts", ".d.ts", ".tsx", ".json", ".mjs"]
      }
    },
    "react": {
      "version": "detect"
    }
  },

  "rules": {
    "no-implicit-coercion": "error",
    "curly": ["error", "all"],
    "eqeqeq": ["error", "always"],
    "no-unused-vars": [
      "error",
      {
        "ignoreRestSiblings": true
      }
    ],
    "react-hooks/exhaustive-deps": "error",
    "react/react-in-jsx-scope": "off",
    "react/no-unknown-property": [
      "error",
      {
        "ignore": ["css"]
      }
    ]
  }
}
